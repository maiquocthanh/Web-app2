<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>signup.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.funix.prj.asm4.filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/posts.jsp</url-pattern>
        <url-pattern>/writing.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginProcessServlet</servlet-name>
        <servlet-class>com.funix.prj.asm4.servlets.LoginProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutProcessServlet</servlet-name>
        <servlet-class>com.funix.prj.asm4.servlets.LogoutProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpProcessServlet</servlet-name>
        <servlet-class>com.funix.prj.asm4.servlets.SignUpProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddContentServlet</servlet-name>
        <servlet-class>com.funix.prj.asm4.servlets.AddContentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginProcessServlet</servlet-name>
        <url-pattern>/LoginProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutProcessServlet</servlet-name>
        <url-pattern>/LogoutProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpProcessServlet</servlet-name>
        <url-pattern>/SignUpProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddContentServlet</servlet-name>
        <url-pattern>/AddContentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
